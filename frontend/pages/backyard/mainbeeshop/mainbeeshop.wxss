/* pages/backyard/mainbeeshop/mainbeeshop.wxss */

.container {
    background-color: white;
}

.current-total-honey {
    width: auto;
    height: 90rpx;
    padding-left: 30rpx;
    line-height: 90rpx;
}

.current-honey-image {
    width: 37rpx;
    height: 44rpx;
    vertical-align: middle;
}

.current-honey-text {
    display: inline-block;
    vertical-align: middle;
    padding-left: 10rpx;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #333;
    letter-spacing: 0.35rpx;
}

.product-header-text {
    width: auto;
    height: 88rpx;
    margin-left: 30rpx;
    line-height: 88rpx;
    margin-top: 30rpx;
}

.product-header-text text {
    padding-left: 12rpx;
    border-left: 8rpx solid #e6b53c;
    font-family: PingFangSC-Semibold;
    font-size: 30rpx;
    color: #333;
    letter-spacing: 0.64rpx;
}

.product-list-view {
    display: inline-block;
    width: auto;
    height: auto;
    margin-left: 30rpx;
    margin-top: 20rpx;
    vertical-align: top;
}

.product-list-image {
    display: block;
    width: 320rpx;
    height: 200rpx;
}

.product-list-text {
    display: block;
    margin-top: 10rpx;
    font-family: PingFangSC-Semibold;
    font-size: 30rpx;
    color: #333;
    letter-spacing: 0.64rpx;
}

.product-list-image-footer {
    margin-top: 11rpx;
    line-height: 32rpx;
}

.prduct-list-honeyimage {
    vertical-align: middle;
    display: inline-block;
    width: 27rpx;
    height: 32rpx;
}

.product-list-honeytext {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #333;
    letter-spacing: 0.28rpx;
}

.product-list-counter {
    padding: 20rpx 0 10rpx;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: black;
    letter-spacing: 0.28rpx;
}

.product-list-counter text {
    color: white;
    background: #222;
    letter-spacing: 0.28rpx;
    display: inline-block;
    text-align: center;
    vertical-align: middle;
    padding: 4rpx;
    margin: 0 4rpx;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
    -ms-border-radius: 10rpx;
    -o-border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
}