.content-view {
    width: 100%;
    height: 100%;
    position: fixed;
    background: white;
}

.content-background-image {
    width: 100%;
    height: 100%;
}

.content-avatar-image {
    position: absolute;
    top: 40rpx;
    left: 30rpx;
    width: 90rpx;
    height: 90rpx;
    border: 2rpx solid #472E00;
    border-radius: 50%;
    z-index: 5;
    background: white;
}

.content-honey-text {
    position: absolute;
    top: 60rpx;
    left: 96rpx;
    width: auto;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    padding-left: 30rpx;
    padding-right: 10rpx;
    background-color: #e6b53c;
    border: 2rpx solid #472e00;
    border-radius: 6rpx;
    font-family: PingFangSC-Semibold;
    color: #472e00;
    letter-spacing: 0.58rpx;
    z-index: 1;
}

.all {
    left: 5%;
    width: 90%;
    margin-top: 180rpx;
    z-index: 10;
    border: 1px solid #e0e0e0;
    border-radius: 10px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    -ms-border-radius: 10px;
    -o-border-radius: 10px;
    position: absolute;
}

.all .bar {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 30rpx 20rpx;
    padding: 10rpx;
    color: #888;
}

.all .bar image {
    width: 50rpx;
    height: 50rpx;
}

.all .week {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 20rpx 40rpx;
    margin: 20rpx;
    padding-bottom: 0;
    background-color: white;
    color: #888;
    font-size: 28rpx;
    border-radius: 10px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    -ms-border-radius: 10px;
    -o-border-radius: 10px;
}

.all .days {
    margin: 0 10rpx 20rpx;
    padding: 0 10rpx;
    border-radius: 10px;
    background-color: white;
    font-size: 28rpx;
}

.all .columns {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.all .columns .rows {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.all .columns .rows .cell {
    position: relative;
    width: 68rpx;
    height: 68rpx;
    margin: 10rpx;
    text-align: center;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.cell image {
    position: absolute;
    bottom: 5%;
    left: 35%;
    width: 30%;
    height: 21%;
}

.isSigned {
    background-color: #e6b53c;
}

.isDisabled {
    color: #d0d0d0;
    background: transparent;
}

.count .daynumber {
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.count .daynumber .day {
    margin-top: 50rpx;
}

.count {
    margin: 20rpx;
    padding: 30rpx;
    display: flex;
    text-align: center;
    border-radius: 10px;
    flex-direction: column;
    justify-content: center;
    background-color: #acd;
    align-items: center;
}

.count .number {
    color: red;
    font-size: 60rpx;
    background-color: #fff;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 20rpx;
}

.count text {
    margin: 10rpx;
}

.status-msg,
.btn-confirm {
    position: absolute;
    bottom: 200rpx;
    left: 20%;
    width: 60%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: rgba(0, 0, 0, 0.6);
    color: white;
    font-size: 26rpx;
    font-weight: 500;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
    -ms-border-radius: 10rpx;
    -o-border-radius: 10rpx;
}

.btn-confirm {
    bottom: 60rpx;
    left: 10%;
    width: 80%;
    height: 80rpx;
    line-height: 80rpx;
    background: #e6b53c;
    font-size: 30rpx;
    font-weight: 600;
}