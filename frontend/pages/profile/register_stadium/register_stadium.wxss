/* select menu content */

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0rpx;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: #bbbbbb;
    z-index: 999;
    color: #fff;
}


/* select menu content */

.modal-dialog {
    position: fixed;
    bottom: 0rpx;
    width: 100vw;
    overflow: hidden;
    z-index: 999;
    background: white;
}

.type_contain_each {
    display: inline-block;
    padding-top: 18rpx;
    width: 24%;
}

.main-type-content {
    width: 100%;
    padding-left: 24rpx;
    z-index: 10000;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
}

.main-type-buttons {
    width: 100%;
    height: 15%;
    z-index: 10000000;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    padding-top: 30rpx;
    padding-bottom: 35rpx;
}

.type-button-cancel {
    width: 45%;
    height: 50rpx;
    margin-left: 27rpx;
    display: inline-block;
    text-align: center;
    border: solid 2rpx #e6b53c;
    color: #e6b53c;
    margin-right: 17rpx;
    padding-top: 10rpx;
}

.type-button-ok {
    width: 45%;
    height: 50rpx;
    display: inline-block;
    text-align: center;
    color: white;
    background: #e6b53c;
    border: solid 2rpx #e6b53c;
    padding-top: 10rpx;
}

.display_type {
    width: 150rpx;
    padding: 9rpx;
    text-align: center;
    background: #eeeeee;
    border-radius: 5rpx;
}

.btn-advanced {
    position: relative;
    width: 80%;
    height: 76rpx;
    line-height: 76rpx;
    border-radius: 10rpx;
    background: #e6b53c;
    color: white;
    font-size: 30rpx;
    text-align: center;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
    -ms-border-radius: 10rpx;
    -o-border-radius: 10rpx;
    margin-top: 60rpx;
    margin-left: 60rpx;
}