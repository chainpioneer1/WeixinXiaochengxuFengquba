.container {
    background-color: white;
}


/* style for select sport kind */

.item_view {
    padding-left: 10px;
    border-bottom: 1rpx solid;
    border-bottom-color: #f4f4f4;
    font-size: 30rpx;
    padding-right: 0rpx;
    padding-top: 39rpx;
    padding-bottom: 39rpx;
}

.text_area {
    display: inline-block;
    vertical-align: middle;
    width: auto;
}

.sport_type {
    display: inline-block;
    width: 520rpx;
    vertical-align: middle;
    height: 60rpx;
    white-space: nowrap;
}

.type_item {
    display: inline-block;
    vertical-align: middle;
    position: relative;
    padding-left: 10rpx;
    font-size: 28rpx
}

.type_item view {
    width: 150rpx;
    background: #eee;
    margin: 10rpx;
    text-align: center;
    border-radius: 6rpx;
    margin-left: 0rpx;
}

.type_item image {
    width: 35rpx;
    height: 35rpx;
    float: right;
}


/* ---------------------------------- */

.stadium-image-next {
    float: right;
    padding-top: 15rpx;
    margin-right: 15rpx;
    width: 25rpx;
    height: 35rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
    padding-bottom: 10rpx;
}

.stadium-input-view {
    width: calc(100% - 30rpx);
    height: 383rpx;
    padding-left: 30rpx;
    border-bottom: 3rpx solid #f4f4f4;
}

.stadium-input-text {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #333;
    letter-spacing: 0.64rpx;
    padding-top: 24rpx;
    padding-bottom: 10rpx;
    display: inline-block;
}

.stadium-input-textarea {
    width: 670rpx;
    height: 238rpx;
    margin-top: 31rpx;
    background: #f2f2f2;
    border-radius: 8rpx;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #888;
    letter-spacing: 1.04rpx;
    line-height: 50rpx;
    padding: 10rpx;
}

.stadium-images-view {
    width: calc(100% - 30rpx);
    height: auto;
    padding-left: 30rpx;
    border-bottom: 3rpx solid #f4f4f4;
    padding-bottom: 25rpx;
    background: white;
}

.stadium-images-text {
    padding-top: 23rpx;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #333;
    letter-spacing: 0.64rpx;
}

.stadium-images-image {
    width: 200rpx;
    height: 200rpx;
    margin-top: 31rpx;
    border: dashed 5rpx #f4f4f4;
    vertical-align: top;
}

.stadium-images-delete {
    width: 30rpx;
    height: 30rpx;
    margin-right: 30rpx;
    transform: translate(-25rpx, 15rpx);
}

.btn-submit {
    position: relative;
    top: 0;
    /* bottom: 0rpx; */
    width: 100%;
    line-height: 90rpx;
    vertical-align: middle;
    text-align: center;
    background: #e6b53c;
    font-size: 40rpx;
    font-weight: 400;
    color: white;
    z-index: 100;
}

.stadium-images-delete1 {
    width: 30rpx;
    height: 30rpx;
    margin-right: 30rpx;
    transform: translate(-25rpx, 15rpx);
}

.select-weekday {
    width: calc(100% - 30rpx);
    height: auto;
    display: flex;
    margin: 0;
    padding: 0;
}

.select-weekday .time_item {
    position: relative;
    flex: auto;
    width: 10%;
    height: 50rpx;
    line-height: 50rpx;
    align-self: center;
    justify-content: center;
    align-items: center;
    margin: 10rpx 10rpx;
    color: white;
    text-align: center;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
    -ms-border-radius: 10rpx;
    -o-border-radius: 10rpx;
}


