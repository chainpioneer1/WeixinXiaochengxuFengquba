/* product part style */

.stadium-product-view {
    width: auto;
    height: auto;
    border-bottom: 3rpx solid #f4f4f4;
    font-size: 30rpx;
    padding-left: 30rpx;
    padding-bottom: 30rpx;
    margin-bottom: 0rpx;
    background: white;
}

.stadium-product-view .stadium-input-text {
    width: 100%;
}

.stadium-product-view .stadium-input-textarea {
    width: 530rpx;
    height: 110rpx;
    margin-top: 30rpx;
    display: inline-block;
    vertical-align: middle;
    margin-left: 10rpx;
    padding: 10rpx;
}

.stadium-product-view .inline_value_text {
    width: 180rpx;
}

.stadium-product-view picker.inline_value_text,
.stadium-product-view picker .inline_value_text {
    width: 220rpx;
    padding-top: 2rpx;
    padding-bottom: 2rpx;
    text-align: center;
}

.product-item {
    position: relative;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #f0f0f0;
    width: 100%;
}

.product-desc {
    width: 93%;
    background: #f2f2f2;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
    -ms-border-radius: 10rpx;
    -o-border-radius: 10rpx;
    padding: 10rpx;
}

.desc-item {
    position: relative;
}

.desc-item .desc-textarea {
    width: 100%;
    height: auto;
    min-height: 50rpx;
    white-space: normal;
    word-break: break-all;
}

.desc-item .stadium-images-image {
    border: 1px dashed #c0c0c0;
    margin: 10rpx;
    width: 180rpx;
    height: 180rpx;
}

.desc-item .stadium-images-remove,
.desc-item .stadium-images-edit {
    position: absolute;
    bottom: 20rpx;
    left: 130rpx;
    width: 40rpx;
    height: 40rpx;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
    -moz-transform: translateX(-50%);
    -ms-transform: translateX(-50%);
    -o-transform: translateX(-50%);
}

.desc-item .stadium-images-edit {
    left: 70rpx;
}

.stadium-product-view .inline-radio {
    display: inline-block;
    margin-left: 0;
    vertical-align: middle;
}

radio {
    transform: scale(0.8);
    -webkit-transform: scale(0.8);
    -moz-transform: scale(0.8);
    -ms-transform: scale(0.8);
    -o-transform: scale(0.8);
    margin: 0;
    padding: 0;
    margin-right: 0;
    margin-left: 20rpx;
    vertical-align: middle;
}

.stadium-product-view .inline-image {
    width: 50rpx;
    height: 50rpx;
    display: inline-block;
    vertical-align: middle;
    margin-right: 20rpx;
}


