/* pages/booking/booking.wxss */

.tab {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    background-color: white;
}

.tab-bar {
    position: absolute;
    top: 18rpx;
    left: 73rpx;
    width: 612rpx;
    height: 64rpx;
    line-height: 64rpx;
    font-size: 28rpx;
}

.tab-item {
    position: absolute;
    width: 204rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
}

.tab-item1 {
    left: 0;
    top: 0;
}

.tab-item2 {
    left: 204rpx;
    top: 0;
}

.tab-item3 {
    left: 408rpx;
    top: 0;
}

.active {
    color: E6B53C;
}

.tab-label {
    position: absolute;
    left: 57rpx;
    top: 12rpx;
}

.activities {
    position: absolute;
    left: 0;
    top: 100rpx;
    width: 100%;
    background-color: #f4f4f4;
    color: #333333;
}

.btn-view {
    background-color: white;
    width: 100%;
    height: 90rpx;
}

.activity-button {
    float: right;
    margin-right: 30rpx;
    margin-top: 14rpx;
    width: 150rpx;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #e6b53c;
    border-radius: 10rpx;
    font-size: 26rpx;
    font-family: "PingFangSC-Semibold";
    color: white;
}

.empty_view {
    width: 100%;
    height: calc(100% - 200rpx);
    position: absolute;
    padding-top: 200rpx;
    text-align: center;
}

.empty_image {
    width: 250rpx;
    height: 250rpx;
    padding-top: 200rpx;
}

.empty_text {
    font-size: 30rpx;
    padding-top: 50rpx;
    color: #666;
}

.go_activity {
    width: 250rpx;
    height: 60rpx;
    line-height: 60rpx;
    border: solid 3rpx #E6B53C;
    border-radius: 15rpx;
    margin-top: 150rpx;
    color: #e6b53c;
    display: inline-block;
}

@import "../template/booking_template.wxss"