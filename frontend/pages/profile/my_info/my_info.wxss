
.container {
    position:relative;
    font-size:30rpx;
    background: white;
}
.profile_image {
    position:relative;
    text-align:center;
}
.img_profile {
    width:100rpx;
    height:100rpx;
    margin-top:20px;
    margin-bottom:15px;
    border-radius:50rpx;
}
.item_view {
    padding:20rpx;
    border-bottom:1rpx solid;
    border-bottom-color:#bbbbbb;
}

.text_area {
    display:inline-block;
    vertical-align:middle;
    width: auto;
}

.text_input {
    display:inline-block;
    vertical-align:middle;
    width: 250rpx;
}

.sex-group {
    display: inline-block;
}

.sex-group radio {
    margin-left: 10rpx;
    transform: scale(0.6)
}

.phone-state {  
    float:right;
    width:40rpx;
    height:40rpx;
    padding-top:10rpx;
}
.phone-state-text {  
    float:right;
    padding-top:10rpx;
    padding-left:10rpx;
}

.sport_type {
    display:inline-block;
    width:520rpx;
    vertical-align:middle;
    height:60rpx;
    white-space:nowrap;
}
.type_item {
    display:inline-block;
    vertical-align:middle;
    position:relative;
    padding-left:10rpx;
    font-size: 28rpx
}
.type_item view {
    width:150rpx;
    background:#eee;
    margin:10rpx;
    text-align:center;
    border-radius:6rpx;
    margin-left:0rpx;
}
.type_item image {
    width:35rpx;
    height:35rpx;
    float:right;
}
.img_plus {
    width:45rpx;
    height:45rpx;
    float: right;
    vertical-align:middle;
    padding-top: 9rpx;
}
.property_text {
    padding-bottom:20rpx;
}
.detail_text {
    width:calc(100vw - 60rpx);
    background:#eee;
    margin:10rpx;
    border-radius:8rpx;
    height:250rpx;
}
.submit_btn {
    position:fixed;
    bottom:0rpx;
    width:100%;
    line-height:90rpx;
    vertical-align:middle;
    text-align:center;
    background:#e6b53c;
    font-size:40rpx;
    font-weight:400;
    color:white;
}



/* select menu content */
.modal-mask {
    width:100%;
    height:86%;
    position:fixed;
    top:0rpx;
    left:0;
    background:#000;
    opacity:0.2;
    overflow:#bbbbbb;
    z-index:99999;
    color:#fff;
    
}

.modal-dialog {
    position:fixed;    
    bottom:0rpx;
    width:100vw;  
    overflow:hidden;
    z-index:99999;
    background:white; 
}
.type_contain_each{
    display: inline-block;
    padding-top:18rpx;
    width: 24%;
}
.main-type-content{  
    width: 100%;  
    padding-left: 24rpx;  
    z-index: 10000000;  
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
}
.main-type-buttons{
    width: 100%;
    height: 15%;  
    z-index: 10000000;  
    font-family: PingFangSC-Regular;
    font-size: 28rpx;  
    padding-top:30rpx;
    padding-bottom:35rpx;
}
.type-button-cancel{  
    width:45%;
    height:50rpx;
    margin-left:27rpx;
    display:inline-block;
    text-align:center;
    border:solid 2rpx #e6b53c;
    color:#e6b53c;
    margin-right:17rpx;
    padding-top:10rpx;
}
.type-button-ok{
    width:45%;
    height:50rpx;
    display:inline-block;
    text-align:center;
    color:white;
    background:#e6b53c;
    border:solid 2rpx #e6b53c;
    padding-top:10rpx;
}
.display_type{  
    width:150rpx;
    padding:9rpx;
    text-align:center;
    background:#eeeeee;
    border-radius:5rpx;
}
