/* pages/booking/booking.wxss */

@import "template/pay_template.wxss";
.booking {
    width: 100%;
    background-color: white;
    color: #333;
}

.booking-status {
    float: right;
    padding-right: 30rpx;
    color: #E6B53C;
    vertical-align: middle;
    font-size: 30rpx;
}

.booking-detail {
    height: auto;
    padding-top: 20rpx;
    padding-left: 30rpx;
}

.booking-picture {
    float: left;
    width: 100rpx;
    height: 100rpx;
}

.booking-name {
    font-size: 32rpx;
    display: inline-block;
    vertical-align: middle;
}

.booking-role-text {
    margin-left: 24rpx;
    text-align: center;
    border-radius: 10rpx;
    font-size: 24rpx;
    display: inline-block;
    vertical-align: middle;
}

.booking-time {
    margin-top: 30rpx;
    display: block;
    font-size: 26rpx;
    font-family: "PingFangSC-Regular";
}

.booking-place {
    padding-top: 15rpx;
}

.address_content {
    display: inline-block;
    width: 80%;
}

.booking-address {
    display: inline-block;
    font-size: 26rpx;
    font-family: "PingFangSC-Regular";
    vertical-align: top;
}

.booking-address1 {
    display: inline-block;
    font-size: 26rpx;
    font-family: "PingFangSC-Regular";
    width: 80%;
    vertical-align: top;
    padding-bottom: 5rpx;
    text-decoration: underline;
    padding-left: 5rpx;
}

.booking-fav-content {
    display: inline-block;
    width: 20%;
    vertical-align: bottom;
}

.booking-fav-text {
    float: right;
    margin-right: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: #472e00;
    letter-spacing: 0.47rpx;
    padding-bottom: 10rpx;
}

.detail-info {
    margin-top: 20rpx;
    background-color: white;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.detail-info view {
    width: auto;
    line-height: 60rpx;
    height: auto;
}

.detail-info-label {
    border-left: 7rpx solid #e6b53c;
    padding-left: 12rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Semibold;
}

.detail-info label {
    padding-left: 12rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Semi;
}

.cancel-button {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    background-color: #e6b53c;
    color: white;
    text-align: center;
    font-size: 32rpx;
    font-family: PingFangSC-Semibold;
}

.action {
    position: relative;
}

.before_complete {
    position: relative;
    text-align: center;
    padding-top: 80rpx;
}

.view_place,
.share_wechat {
    width: 50%;
    border-radius: 15rpx;
    position: relative;
    color: #e6b53c;
    border: 1rpx solid;
    border-color: #e6b53c;
    display: inline-block;
    margin: 15rpx;
    height: 70rpx;
    vertical-align: middle;
    line-height: 70rpx;
    font-size: 30rpx;
}

.img_share {
    width: 50rpx;
    height: 40rpx;
    display: inline-block;
    vertical-align: middle;
    padding-right: 20rpx;
}

.text_share {
    display: inline-block;
    font-size: 30rpx;
}

.cancel_booking {
    width: 50%;
    border-radius: 15rpx;
    background: #aaa;
    position: relative;
    color: white;
    border: 1rpx solid;
    border-color: #e6b53c;
    display: inline-block;
    margin: 15rpx;
    height: 70rpx;
    vertical-align: middle;
    line-height: 70rpx;
}

.enable {
    border-color: red;
    border: 1rpx solid;
    color: red;
    background: white
}

.introduce {
    margin-top: 20rpx;
    width: 100%;
    height: auto;
    background-color: white;
    text-align: left;
    padding-bottom: 20rpx;
}

.introduce-view {
    font-size: 30rpx;
    padding-top: 23rpx;
    height: 88rpx;
    margin-left: 30rpx;
}

.introduce-border {
    border-left: 7rpx solid #e6b53c;
    padding-left: 12rpx;
}

.introduce-detail {
    display: block;
    background-color: white;
    word-break: break-all;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    line-height: 50rpx;
    color: #333;
    letter-spacing: 0.64rpx;
}

.after_complete {
    position: relative;
    text-align: center;
}

.cls_score_title_bar {
    width: 100%;
    height: 88rpx;
    background-color: white;
}

.cls_score_title {
    font-size: 30rpx;
    margin-left: 30rpx;
}

.cls-score-star-view1 {
    display: inline;
    margin-left: 10rpx;
}

.cls-score-star-view2 {
    display: inline;
    margin-left: 10rpx;
}

.cls_score_star {
    width: 36rpx;
    height: 36rpx;
}

.view_place_complete {
    display: inline-block;
    width: 40%;
    border-radius: 15rpx;
    position: relative;
    color: white;
    border: 1rpx solid;
    border-color: #e6b53c;
    background: #e6b53c;
    margin: 10rpx;
    margin-top: 50rpx;
}

.go_review {
    display: inline-block;
    width: 40%;
    border-radius: 15rpx;
    position: relative;
    color: #e6b53c;
    border: 1rpx solid;
    border-color: #e6b53c;
    margin: 10rpx;
    margin-top: 50rpx;
}

.booked-info {
    position: relative;
    width: 100%;
    height: auto;
    background: white;
    padding-top: 20rpx;
    padding-left: 30rpx;
    margin-top: 2px;
}

.book-info-label {
    position: relative;
    width: 120rpx;
    text-align: left;
    display: inline-block;
    padding: 0;
    margin: 0;
    vertical-align: top;
    line-height: 1.2rem;
}

.book-info-content {
    position: relative;
    display: inline-block;
    width: calc(100vw - 160rpx);
    height: auto;
    padding: 0;
    margin: 0;
    line-height: 1.2rem;
}

.book-item {
    position: relative;
    display: inline-block;
    width: calc(70vw);
    border-radius: 10rpx;
    border: 1px solid #e6b53c;
    margin: 5rpx;
    padding: 0;
    height: 1rem;
}

.book-title,
.book-time {
    position: absolute;
    width: 38%;
    height: 1rem;
    line-height: 1rem;
    background: #e6b53c;
    color: white;
    text-align: center;
    font-size: 24rpx;
}

.book-time {
    left: 38%;
    width: 61%;
    background: transparent;
    color: #e6b53c;
}

@import "../../profile/template/get_userinfo.wxss";