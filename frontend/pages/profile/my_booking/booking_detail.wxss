.img_share {
    width: 50rpx;
    height: 40rpx;
    display: inline-block;
    vertical-align: middle;
    padding-right: 20rpx;
}

.text_share {
    display: inline-block;
    font-size: 30rpx;
}

.enable {
    border-color: red;
    border: 1rpx solid;
    color: red;
}

.introduce {
    margin-top: 20rpx;
    width: 100%;
    height: auto;
    background-color: white;
    text-align: left;
    padding-bottom: 20rpx;
}

.introduce-view {
    font-size: 26rpx;
    padding-top: 23rpx;
    height: 88rpx;
    margin-left: 30rpx;
}

.introduce-border {
    border-left: 7rpx solid #e6b53c;
    padding-left: 12rpx;
}

.introduce-detail {
    display: block;
    background-color: white;
    word-break: break-all;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    line-height: 50rpx;
    color: #333;
    letter-spacing: 0.64rpx;
}

.after_complete {
    position: relative;
    text-align: center;
}

.cls_score_title_bar {
    width: 100%;
    height: 88rpx;
    background-color: white;
}

.cls_score_title {
    font-size: 30rpx;
    margin-left: 30rpx;
}

.cls-score-star-view1 {
    display: inline;
    margin-left: 10rpx;
}

.cls-score-star-view2 {
    display: inline;
    margin-left: 10rpx;
}

.cls_score_star {
    width: 36rpx;
    height: 36rpx;
}

.view_place_complete,
.go_review {
    display: inline-block;
    width: 30%;
    border-radius: 15rpx;
    position: relative;
    color: #e6b53c;
    border: 1px solid #e6b53c;
    margin: 10rpx;
    margin-top: 100rpx;
    line-height: 70rpx;
    font-size: 30rpx;
}

