/* pages/booking/booking.wxss */

.booking {
    width: 100%;
    background-color: white;
    color: #333;
}

.booking-status {
    float: right;
    padding-right: 30rpx;
    color: #E6B53C;
    vertical-align: middle;
    font-size: 26rpx;
}

.booking-detail {
    height: auto;
    padding-top: 20rpx;
    padding-left: 30rpx;
}

.booking-picture {
    float: left;
    width: 100rpx;
    height: 100rpx;
}

.booking-name {
    font-size: 32rpx;
    display: inline-block;
    vertical-align: middle;
}

.booking-role-text {
    margin-left: 24rpx;
    text-align: center;
    border-radius: 10rpx;
    font-size: 24rpx;
    display: inline-block;
    vertical-align: middle;
}

.booking-time {
    margin-top: 20rpx;
    line-height: 40rpx;
    display: block;
    font-size: 26rpx;
    font-family: "PingFangSC-Regular";
}

.time_content {
    line-height: 40rpx;
    display: flex;
    justify-content: center;
}

.time_content view {
    flex: auto;
    align-self: flex-end;
}

.booking-place {
    padding-top: 15rpx;
}

.address_content {
    display: inline-block;
    width: 80%;
}

.booking-address {
    display: inline-block;
    font-size: 26rpx;
    font-family: "PingFangSC-Regular";
    vertical-align: top;
}

.booking-address1 {
    display: inline-block;
    font-size: 26rpx;
    font-family: "PingFangSC-Regular";
    width: 80%;
    vertical-align: top;
    padding-bottom: 5rpx;
    text-decoration: underline;
    padding-left: 5rpx;
}

.booking-fav-content {
    display: inline-block;
    width: 20%;
    float: right;
    vertical-align: middle;
    line-height: 38rpx;
}

.booking-fav-text {
    /* display: inline-block; */
    /* float: right; */
    vertical-align: middle;
    text-align: right;
    /* line-height: 38rpx; */
    margin-right: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #472e00;
    letter-spacing: 0.47rpx;
}

.detail-info {
    margin-top: 20rpx;
    background-color: white;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.detail-info view {
    width: auto;
    line-height: 60rpx;
    height: auto;
}

.detail-info-label {
    border-left: 7rpx solid #e6b53c;
    padding-left: 12rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Semibold;
}

.detail-txt {
    padding-left: 12rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Semi;
}

.cancel-button {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    border: 1px solid #e6b53c;
    color: #e6b53c;
    text-align: center;
    font-size: 28rpx;
    font-family: PingFangSC-Semibold;
}

.action {
    position: relative;
}

.before_complete {
    position: relative;
    text-align: center;
    padding: 40rpx 0rpx;
    font-size: 30rpx;
}

.view_place,
.cancel_booking,
.share_wechat {
    width: 40%;
    border-radius: 15rpx;
    position: relative;
    color: #e6b53c;
    border: 1rpx solid;
    border-color: #e6b53c;
    display: inline-block;
    margin: 15rpx 60rpx;
    height: 70rpx;
    vertical-align: middle;
    line-height: 70rpx;
    font-size: 30rpx;
}

button:after {
    outline: none;
    border: none;
}


