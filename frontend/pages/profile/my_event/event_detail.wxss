/* pages/booking/booking.wxss */

.event {
    width: 100%;
    background-color: #f4f4f4;
    color: #333;
    font-size: 30rpx;
}

.event-bar {
    width: 100%;
    line-height: 88rpx;
    background-color: white;
}

.event-no {
    padding-left: 30rpx;
    font-size: 30rpx;
    color: #333;
}

.event-status {
    float: right;
    padding-right: 30rpx;
    font-size: 30rpx;
    font-family: "PingFangSC-Semibold";
}

.event-detail {
    margin-top: 20rpx;
    width: 100%;
    height: auto;
    background-color: white;
}

.event-picture {
    float: left;
    vertical-align: -60rpx;
    margin-left: 30rpx;
    margin-top: 20rpx;
    width: 100rpx;
    height: 100rpx;
    display: inline-block;
}

.event-name {
    margin-left: 20rpx;
    margin-top: 20rpx;
    font-size: 32rpx;
    font-family: "PingFangSC-Semibold";
    color: #333;
    letter-spacing: 0.68rpx;
    display: inline-block;
    min-width: 60%;
    max-width: 75%;
}

.event-content {
    margin-top: 10rpx;
    display: inline-block;
}

.event-content image {
    margin-left: 20rpx;
    width: 32rpx;
    height: 32rpx;
    display: inline-block;
    vertical-align: middle;
}

.event-content text {
    margin-left: 10rpx;
    width: 32rpx;
    height: 32rpx;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #333;
    letter-spacing: 0.56rpx;
}

.event-time {
    padding-top: 20rpx;
    width: calc(100% - 30rpx);
    height: auto;
    background-color: white;
    padding-left: 30rpx;
}

.event-time-label {
    font-size: 30rpx;
    font-family: "PingFangSC-Regular";
}

.event-phone {
    padding-top: 20rpx;
    width: calc(100% - 30rpx);
    height: auto;
    background-color: white;
    padding-left: 30rpx;
    padding-bottom: 30rpx;
}

.event-phone-label {
    font-size: 30rpx;
    font-family: "PingFangSC-Regular";
    text-overflow: break-all;
    overflow: visible;
}

.event-address {
    padding-top: 20rpx;
    padding-bottom: 10rpx;
    width: calc(100% - 30rpx);
    height: auto;
    background-color: white;
    padding-left: 30rpx;
    font-size: 30rpx;
    font-family: "PingFangSC-Regular";
    text-overflow: break-all;
    overflow: visible;
}

.detail-info {
    margin-top: 20rpx;
    background-color: white;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.detail-info view {
    width: auto;
    line-height: 70rpx;
    height: auto;
}

.detail-info-label {
    border-left: 7rpx solid #e6b53c;
    padding-left: 12rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Semibold;
}

.detail-info label {
    padding-left: 12rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Semi;
}

.personal-name-label,
.personal-img {
    position: relative;
    display: inline-block;
    width: auto;
    height: auto;
    vertical-align: top;
    padding-right: 10rpx;
}

.personal-img {
    width: 250rpx;
    height: 200rpx;
}

.cancel-button {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    background-color: #e6b53c;
    color: white;
    text-align: center;
    font-size: 32rpx;
    font-family: PingFangSC-Semibold;
}

.action {
    position: relative;
    padding-top: 100rpx;
}

.before_complete {
    position: relative;
    text-align: center;
    padding: 40rpx 0rpx;
    font-size: 30rpx;
}

.view_place,
.cancel_booking,
.share_wechat {
    width: 40%;
    border-radius: 15rpx;
    position: relative;
    color: #e6b53c;
    border: 1rpx solid;
    border-color: #e6b53c;
    display: inline-block;
    margin: 15rpx 60rpx;
    height: 70rpx;
    vertical-align: middle;
    line-height: 70rpx;
    font-size: 30rpx;
}

button:after {
    outline: none;
    border: none;
}

.event-picture .swiper_box {
    width: 100%;
    height: 100%;
}

.event-picture .swiper_box .img-item {
    width: 100%;
    height: 100%;
}
