.activity {
  margin-top: 20rpx;
  padding-bottom: 5rpx;
  background-color: white;
  width: 100%;
  height: auto;
  border-bottom: 3rpx solid #f4f4f4;
}

.activity-bar {
  padding-left: 30rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  font-family: "PingFangSC-Semibold";
}

.activity-status {
  float: right;
  padding-right: 30rpx;
}

.activity-detail {
  height: auto;
  padding-top: 20rpx;
  padding-left: 30rpx;
}

.activity-picture {
  float: left;
  width: 100rpx;
  height: 100rpx;
}
.activity-role{
  margin-left: 120rpx;
}
.activity-name {
  font-size: 32rpx;
  display: inline-block;
  vertical-align: top;
}

.activity-role-text{
  margin-left: 24rpx; 
  border: solid 3rpx #E6B53C;
  text-align: center;
  border-radius: 10rpx;
  color: #E6B53C;
  font-size: 24rpx;
  display: inline-block;
  vertical-align: top;
}


.activity-content {
  margin-top: 10rpx;
  height: 36rpx;
  font-size: 26rpx;
  margin-left: 120rpx;
  font-family: "PingFangSC-Regular";
}

.activity-content image {
  vertical-align: bottom;
  margin-right: 10rpx;
}

.activity-type {
  width: 32rpx;
  height: 32rpx;
}

.activity-limit {
  width: 34rpx;
  height: 34rpx;
  padding-left: 30rpx;
}

.activity-cost {
  width: 32rpx;
  height: 36rpx;
  padding-left: 30rpx;
}

.activity-time {
  margin-top: 30rpx;
  display: block;
  font-size: 26rpx;
  font-family: "PingFangSC-Regular";
}

.activity-address {
  display: inline-block;
  float: left;
  width: 10%;
  margin-top: 10rpx;
  font-size: 26rpx;
  font-family: "PingFangSC-Regular";
}

.activity-address1 {
  vertical-align: top;
  width: 80%;
  display: inline-block;
  margin-top: 10rpx;
  font-size: 26rpx;
  font-family: "PingFangSC-Regular";
}
.activity-fav-text {
  float: right;
  margin-right: 20rpx;  
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #472e00;
  letter-spacing: 0.47rpx;
}

.activity-fav-image {
  float: right; 
  margin-right: 5rpx;
  width: 25rpx;
  height: 30rpx;
}

.activity-picture .swiper_box {
  width: 100%;
  height: 100%;
}

.activity-picture .swiper_box .img-item {
  width: 100%;
  height: 100%;
}