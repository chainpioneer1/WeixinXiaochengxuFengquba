.activity {
  margin-top: 20rpx;
  background-color: white;
  width: 100%;
  height: auto;
  padding-bottom: 5rpx;
  border-bottom: 2rpx solid #f4f4f4;
}

.activity-detail {
  height: auto;
  padding-top: 20rpx;
  padding-left: 30rpx;
}

.activity-picture {
  float: left;
  width: 100rpx;
  height: 100rpx;
}

.activity-role {
  margin-left: 20rpx;
  display: inline-block;
  vertical-align: top;
  width: 83%;
}

.activity-name {
  font-size: 32rpx;
    display: inline-block;
  vertical-align: top;
}

.activity-role-text {
  margin-left: 24rpx;
  border: solid 3rpx #e6b53c;
  text-align: center;
  border-radius: 10rpx;
  color: #e6b53c;
  font-size: 24rpx;
    display: inline-block;
  vertical-align: top;
}

.activity-status {
  float: right;
  padding-right: 30rpx;
  font-family: PingFangSC-Semibold;
  font-size: 26rpx;
  color: #333;
  letter-spacing: 0.56rpx;
}

.activity-content {
  margin-top: 10rpx;
  height: 36rpx;
  font-size: 26rpx;
  margin-left: 120rpx;
  font-family: "PingFangSC-Regular";
}

.activity-content image {
  vertical-align: bottom;
  margin-right: 10rpx;
}

.activity-type {
  width: 32rpx;
  height: 32rpx;
}

.activity-limit {
  width: 34rpx;
  height: 34rpx;
  padding-left: 30rpx;
}

.activity-cost {
  width: 32rpx;
  height: 36rpx;
  padding-left: 30rpx;
}

.activity-time {
  margin-top: 30rpx;
  display: block;
  font-size: 26rpx;
  font-family: "PingFangSC-Regular";
}

.activity-address {
  float: left;
  width: 10%;
  display: inline-block;
  font-size: 26rpx;
  font-family: "PingFangSC-Regular";
}

.activity-address1 {
  vertical-align: top;
  display: inline-block;
  width: 72%;
  font-size: 26rpx;
  font-family: "PingFangSC-Regular";
}
.activity-fav-text {
  float: right;
  margin-right: 30rpx;  
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #472e00;
  letter-spacing: 0.47rpx;
}

.activity-fav-image {
  float: right; 
  margin-right: 5rpx;
  width: 30rpx;
  height: 30rpx;
}
.activity-picture .swiper_box {
    width: 100%;
    height: 100%;
}

.activity-picture .swiper_box .img-item {
    width: 100%;
    height: 100%;
}