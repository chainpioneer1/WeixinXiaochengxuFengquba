.activity {
    position: relative;
    margin-top: 20rpx;
    padding-bottom: 5rpx;
    background-color: white;
    width: 100%;
    height: auto;
    font-family: "PingFangSC";
    border-top: 1px solid #f0f0f0;
}

.activity-detail {
    height: auto;
    /* border-bottom: solid 3rpx #f4f4f4; */
    padding-top: 20rpx;
    padding-left: 30rpx;
}

.event-status {
    padding-top: 5rpx;
    float: right;
    margin-right: 30rpx;
    color: #333333;
    font-size: 26rpx;
    font-style: bold;
    letter-spacing: 0.56rpx;
}

.activity-picture {
    float: left;
    width: 100rpx;
    height: 100rpx;
}

.activity-role {
    margin-left: 20rpx;
    display: inline;
}

.activity-role-text {
    vertical-align: middle;
    margin-left: 24rpx;
    border: solid 3rpx #e6b53c;
    text-align: center;
    border-radius: 10rpx;
    color: #e6b53c;
    font-size: 24rpx;
}

.activity-name {
    font-size: 32rpx;
    font-style: bold;
}

.activity-content {
    margin-top: 10rpx;
    font-size: 26rpx;
    margin-left: 120rpx;
    font-family: "PingFangSC-Regular";
}

.activity-content image {
    vertical-align: bottom;
    margin-right: 10rpx;
}

.activity-type {
    width: 32rpx;
    height: 32rpx;
}

.activity-limit {
    width: 34rpx;
    height: 34rpx;
    padding-left: 30rpx;
}

.activity-cost {
    width: 32rpx;
    height: 36rpx;
    padding-left: 30rpx;
}

.activity-time {
    margin-top: 30rpx;
    display: block;
    font-size: 24rpx;
    font-family: "PingFangSC-Regular";
}

.activity-address {
    margin-top: 10rpx;
    float: left;
    width: 10%;
    display: inline-block;
    font-size: 24rpx;
    font-family: "PingFangSC-Regular";
}

.activity-address1 {
    margin-top: 10rpx;
    vertical-align: top;
    display: inline-block;
    width: 65%;
    font-size: 24rpx;
    font-family: "PingFangSC-Regular";
}

.activity-favourite-text {
    margin-top: 10rpx;
    float: right;
    margin-right: 30rpx;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: #472e00;
    letter-spacing: 0.47rpx;
}

.activity-favourite-image {
    margin-top: 10rpx;
    float: right;
    margin-right: 10rpx;
    width: 30rpx;
    height: 29rpx;
}

.activity-picture .swiper_box {
    width: 100%;
    height: 100%;
}

.activity-picture .swiper_box .img-item {
    width: 100%;
    height: 100%;
}