/**index.wxss**/

.reg_cls_title {
  width: 100%;
  height: 88rpx;
  padding-top: 23rpx;
}

.reg_cls_all_comments {
  margin-left: 30rpx;
  font-family: PingFangSC-Semibold;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 0.64rpx;
}

.reg_cls_user_comment_info {
  width: 100%;
  height: 140rpx;
  border-bottom: solid 3rpx #f4f4f4;
}

.reg_cls_user_photo {
  margin-top: 20rpx;
  float: left;
  margin-left: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border: solid 1rpx #f4f4f4;
  border-radius: 50%;
}

.reg_cls_user_name {
  margin-left: 20rpx;
  width: auto;
  height: auto;
  font-family: PingFangSC-Semibold;
  font-size: 26rpx;
  color: #333;
  letter-spacing: 1.8rpx;
}

.reg_member_status {
  float: right;
  margin-top: 10rpx;
  margin-right: 30rpx;
  width: auto;
  height: auto;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #e6b53c;
  letter-spacing: 0.5rpx;
}
.reg_member_detail
{
  display: inline-block;
  width: 80%;
  margin-top: 17rpx;
}
.reg_cls_comment_number {
  margin-left: 20rpx;
  width: auto;
  height: auto;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #888;
}

.reg_cls_comment_content {
  float: right;
  margin-right: 30rpx;
  margin-top: 10rpx;
  width: auto;
  height: auto;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #333;
  letter-spacing: 1.8rpx;
}
