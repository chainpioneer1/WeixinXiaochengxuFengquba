.activity {
    margin-top: 20rpx;
    background-color: white;
    width: 100%;
    height: auto;
    border-bottom: 2rpx solid #f4f4f4;
}

.activity-detail {
    height: auto;
    padding-top: 20rpx;
    padding-left: 30rpx;
}

.activity-picture {
    float: left;
    width: 100rpx;
    height: 100rpx;
}

.activity-role {
    margin-left: 20rpx;
    display: inline;
}

.activity-endline {
    margin-bottom: 5rpx;
}

.activity-name {
    vertical-align: middle;
    font-size: 27rpx;
}

.activity-role-text {
    vertical-align: middle;
    margin-left: 24rpx;
    border: solid 3rpx #e6b53c;
    text-align: center;
    border-radius: 10rpx;
    color: #e6b53c;
    font-size: 24rpx;
}

.activity-status {
    vertical-align: middle;
    float: right;
    padding-right: 30rpx;
}

.activity-content {
    height: 36rpx;
    font-size: 26rpx;
    margin-left: 120rpx;
    margin-top: 13rpx;
    font-family: "PingFangSC-Regular";
}

.activity-content image {
    margin-right: 10rpx;
    vertical-align: bottom;
}

.activity-type {
    width: 32rpx;
    height: 32rpx;
}

.activity-limit {
    width: 34rpx;
    height: 34rpx;
    padding-left: 30rpx;
}

.activity-cost {
    width: 32rpx;
    height: 36rpx;
    padding-left: 30rpx;
}

.activity-favourite-text {
    float: right;
    margin-right: 30rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #472e00;
    letter-spacing: 0.47rpx;
}

.activity-favourite-image {
    float: right;
    margin-right: 10rpx;
    width: 30rpx;
    height: 29rpx;
    padding-top: 2rpx;
}

.activity-time {
    margin-top: 20rpx;
    display: block;
    font-size: 26rpx;
    font-family: "PingFangSC-Regular";
}

.activity-address {
    float: left;
    width: 10%;
    display: inline-block;
    font-size: 26rpx;
    font-family: "PingFangSC-Regular";
}

.activity-address1 {
    vertical-align: top;
    display: inline-block;
    width: 65%;
    font-size: 26rpx;
    font-family: "PingFangSC-Regular";
}

.activity-distance-text {
    float: right;
    margin-right: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #472e00;
    letter-spacing: 0.47rpx;
}

.activity-location-image {
    float: right;
    margin-right: 8rpx;
    width: 24rpx;
    height: 30rpx;
    padding-top: 1rpx;
}

.activity-picture .swiper_box {
    width: 100%;
    height: 100%;
}

.activity-picture .swiper_box .img-item {
    width: 100%;
    height: 100%;
}