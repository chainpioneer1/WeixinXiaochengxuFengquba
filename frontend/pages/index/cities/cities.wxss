view {
    font-size: 28rpx;
}

.list-view {
    position: fixed;
    background: #f0f0f0;
    width: calc(100vw);
    height: calc(100vh);
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
}

.top-bar {
    position: relative;
    height: 90rpx;
    background: white;
    margin-bottom: 20rpx;
}

.top-bar view,
.top-bar image {
    position: absolute;
    transform: translateY(-50%);
    top: 50%;
}

.top-title {
    left: 5%;
    width: 80%;
    color: grey;
}

.top-title view {
    left: 140rpx;
    width: 100%;
    color: black;
    font-weight: bold;
    font-size: 30rpx;
}

.list-container {
    position: relative;
    width: 100%;
    height: calc(100vh - 100rpx);
}

.list-item {
    position: relative;
    height: 90rpx;
    width: 100%;
    margin: 0;
    padding: 0;
    background: white;
    margin-bottom: 1px;
}

.list-item view,
.list-item image {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

.list-info {
    left: 10%;
}

.list-info view {
    position: relative;
    width: auto;
    height: auto;
    white-space: nowrap;
    transform: none;
    margin: 10rpx 0;
}

.list-name {
    font-weight: 600;
}

.list-navigator {
    position: absolute;
    right: 10rpx;
    transform: translateY(-50%);
    height: 75%;
    width: 50rpx;
    background: #ddd;
    color: #333;
    border-radius: 30rpx;
    top: 52%;
    padding: 10rpx 0;
}

.nav-item {
    position: relative;
    display: inline-block;
    height: 1.8rem;
    line-height: 1.9rem;
    text-align: center;
    width: 100%;
    font-size: 34rpx;
}